<div class="container">
  <div class="row">
    <h2>アップロードした写真一覧</h2>
  </div>
  <div class="row">
    <div class="col">
      <% @albums.each do |img| %>
        <%= attachment_image_tag img, :image, class:"img-thumbnail", width:"300" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <%= link_to "新規投稿する", new_album_path, class:"h3" %>
  </div>
</div>